@using Volo.Abp.AspNetCore.Components.Web
@inherits HorecaComponentBase
<Pagination>
    @{
        foreach(var link in _links)
        {
            <PaginationItem @key="link.Page" Active="@link.Active">
                <PaginationLink Page="@link.Text" Clicked="() => OnSelectedPage(link)">
                    @link.Text
                </PaginationLink>
            </PaginationItem>
        } 
    }
</Pagination>