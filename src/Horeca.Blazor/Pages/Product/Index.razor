@page "/products/{ProductId:guid?}"
@using Horeca.Products
@using Horeca.Localization
@using Horeca.Blazor.Pages.Category;
@using Volo.Abp.AspNetCore.Components.Web
@inherits HorecaComponentBase
@inject AbpBlazorMessageLocalizerHelper<HorecaResource> LH
<Layout Sider>
    <LayoutSider class="bg-white">
        <LayoutSiderContent>
            <SideAccordion></SideAccordion>
        </LayoutSiderContent>
    </LayoutSider>
    <Layout>
        <LayoutHeader Fixed>
            Header
        </LayoutHeader>
        <LayoutContent>
            @if(ProductId != null)
            {
                <ProductInfo ProductId = "(Guid)ProductId"></ProductInfo>
            }
            else
            {
                <Grid></Grid>
            }
        </LayoutContent>
    </Layout>
</Layout>