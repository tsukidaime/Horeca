<Accordion>
    @foreach(var item in Items){
        <Collapse Visible="@ItemVisibilities[item.Id]">
            <CollapseHeader>
                <Heading Size="HeadingSize.Is5">
                    <Button Clicked="@(()=>SelectHead(item.Id))">@item.Name</Button>
                </Heading>
            </CollapseHeader>
            <CollapseBody>
                @if (item.Children.Count() > 0)
                {
                        <ListGroup Mode="ListGroupMode.Selectable" @bind-SelectedItem="SelectedChild" Flush>
                            @foreach (var subItem in item.Children)
                            {
                                <ListGroupItem Name="@subItem.Name" Clicked="@(()=>SelectCategory(subItem.Id))">
                                    @subItem.Name
                                </ListGroupItem>
                            }
                        </ListGroup>
                }
            </CollapseBody>
        </Collapse>
    }
</Accordion>